# Application Settings
APP_ENV=development
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000
API_RATE_LIMIT=1000
API_TIMEOUT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=csai
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=verify-full
DB_POOL_SIZE=20
DB_ENCRYPTION_KEY=your_encryption_key

# Redis Cache Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SSL=true
REDIS_CACHE_TTL=3600

# AWS Service Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-west-2
AWS_S3_BUCKET=csai-storage
AWS_SAGEMAKER_ENDPOINT=csai-predictions
AWS_KMS_KEY_ID=your_kms_key_id

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
WAF_ENABLED=true
WAF_RULES_PATH=/etc/waf/rules.conf
TLS_CERT_PATH=/etc/certs/server.crt
TLS_KEY_PATH=/etc/certs/server.key

# Monitoring Configuration
LOG_LEVEL=INFO
DATADOG_API_KEY=your_datadog_api_key
SENTRY_DSN=your_sentry_dsn
HEALTH_CHECK_INTERVAL=30